{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^3",
    "express": "^4"
  },
  "scripts": {
    "start": "npx cds run"
  },
  "devDependencies": {
    "sqlite3": "^4.1.1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "my.db"
        }
      }
    },
    "auth": {
      "passport": {
        "strategy": "mock",
        "users": {
          "alice": {
            "roles": [ "admin" ],
            "ID": "alice@wonder.land",
            "password": "secret",
            "userAttributes": { "country": "US" }
          }
        }
      }
    }
  }
}